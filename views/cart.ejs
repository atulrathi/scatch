<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shop</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="font-sans bg-white text-gray-800">
    <!-- Header -->
    <header
      class="flex justify-between items-center px-10 py-4 border-b border-gray-300"
    >
      <h2 class="text-2xl font-bold">Scatch.</h2>
      <nav class="mr-[10rem] space-x-6">
        <a href="/user" class="no-underline text-lg mr-4">Products</a>
        <a class="text-red-500" href="/user/logout">Logout</a>
      </nav>
    </header>

    <div class="  flex px-10 py-6">
      <!-- Sidebar -->
      <aside class="w-48 pr-6 border-r border-zinc">
        <h4 class="text-sm font-semibold mb-2">Sort by:</h4>
        <select
          class="w-full mb-6 border border-gray-300 rounded-md px-2 py-1 text-sm"
        >
          <option>Popular</option>
          <option>Price: Low to High</option>
          <option>Price: High to Low</option>
        </select>

        <h4 class="text-sm font-semibold mb-2">Collections</h4>
        <div class="flex flex-col space-y-2 mb-60 text-sm">
          <a href="#" class="no-underline">New Collection</a>
          <a href="#" class="no-underline font-bold">All Products</a>
          <a href="#" class="no-underline">Discounted Products</a>
        </div>

        <h4 class="text-sm font-semibold mb-2 text-black">Filter by:</h4>
        <div class="flex flex-col space-y-2 text-sm">
          <a href="#" class="no-underline">Availability</a>
          <a href="#" class="no-underline">Discount</a>
        </div>
      </aside>

      <!-- Products area -->
      <main class="ml-[4rem] flex">
        <!-- Product grid -->
        <div class="  grid grid-cols-2 gap-3 min-h-[10rem] overflow-hindden">
          <!-- Product card -->
           <% if(user.cart.length>0){ %>
            <% user.cart.forEach((product)=>{ %>
<div class="relative bg-[<%= product.backgroundcolor%>] p-4 overflow-hidden flex max-h-[15rem] min-w-[40rem] ">
            <div class="  w-[10rem] min-h-[10rem] bg-[<%= product.backgroundcolor%>] rounded-lg mb-4 ">
              <img
                src="data:<%=product.image.contentType%>;base64,<%= product.image.data.toString('base64')%>"
                class="rounded-md h-full w-full object-cover"
                alt=""
              />
            </div>
            <div class="ml-6 min-h-[10rem ] overflow-hidden min-w-[5rem]">
            <div class="font-bold text-5xl"><%= product.name %></div>
            <div class="text-3xl text-[<%=product.textcolor%>] "><p>&#8377 <%= product.price %></p></div>
            <div class="text-sm w-[18rem] h-[10rem] overflow-auto scrollbar-hide mt-5 "><p><%= product.details%></p></div>
            </div>
            <a href="/cart/product/<%=product._id%>"  class="absolute bottom-3 right-3 border  bg-white rounded-full px-2 text-sm">remove</a>
          </div>
          <% }) %>
          <% }else{ %>
            <h1 class="text-4xl mt-[100%] ml-[170%] w-full">Your cart is empty</h1>
         <% } %>
           
          
          
        </div>
      </main>
    </div>
  </body>
</html>
